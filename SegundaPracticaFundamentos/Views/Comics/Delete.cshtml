@model Comic

<h1>Eliminar Comic</h1>

<p>
    <a asp-controller="Comics" asp-action="Index">Back to Index</a>
</p>

<form method="post">
    <label>Comic</label>
    <input type="text" name="nombre" value=@Model.IdComic class="form-control" />
    <label>Comic</label>
    <input type="text" name="nombre" value=@Model.Nombre class="form-control" />
    <hr />
    <img src="@Model.Imagen" alt="Imagen de @Model.Imagen" width="250"/>
    <hr />
    <label>Descripcion</label>
    <input type="text" name="descripcion" value=@Model.Descripcion class="form-control" />
    <h1>¿Seguro que quieres eliminar el comic "@Model.Nombre"?</h1>
    <button class="btn btn-info">
        Eliminar Comic
    </button>
</form>